<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_notice_number"
        android:layout_width="40.68dp"
        android:layout_height="13dp"
        android:background="@drawable/bg_notice_number"
        android:text="123"
        android:textColor="@color/green_10"
        android:textSize="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26.49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_notice_date"
        android:layout_width="58dp"
        android:layout_height="13dp"
        android:background="@drawable/bg_notice_date"
        android:text="2025-01-22"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="7.83dp"
        app:layout_constraintTop_toTopOf="@id/item_notice_number"
        app:layout_constraintStart_toEndOf="@id/item_notice_number"/>
    
    <ImageView
        android:id="@+id/item_notice_bookmark"
        android:layout_width="14dp"
        android:layout_height="17dp"
        android:src="@drawable/bookmark_off"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/item_notice_title"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="★재학생(편입, 복전) 필독★ 졸업작품 이수 관련 안내"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24.29dp"
        app:layout_constraintTop_toBottomOf="@id/item_notice_number"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray39"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>