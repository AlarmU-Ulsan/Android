<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1">

    <ImageView
        android:id="@+id/item_major_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/logo_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_major_text"
        app:layout_constraintBottom_toBottomOf="@id/item_major_text"/>

    <TextView
        android:id="@+id/item_major_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICT융합학부"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_major_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="14dp"
        android:paddingVertical="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>